<% layout('layouts/boilerplate') %>

<div class="mt-4 px-4 container">
    <h1 class="heading text-center mb-3">Login</h1>
    <div class="container d-flex justify-content-center align-items-center">
        <div class="row">
            <!-- <div class="col"></div> -->
            <!-- <form action="/login" method="post" class="validated-form contact-form col-lg-4 shadow" novalidate> -->
            <div class="rounded p-3 background-color contact-form shadow col-md-6 offset-md-3 col-xl-4 offset-xl-4">
                <div class="col mt-3">
                    <img
                        src="https://images.unsplash.com/photo-1541534741688-6078c6bfb5c5?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1169&q=80"
                        alt=""
                        class="card-img-top rounded"
                    />
                    <form action="/login" method="post" class="validated-form" novalidate>
                        <div class="my-3">
                            <label class="form-label" for="username">Username</label>
                            <input class="form-control" type="text" id="username" name="username" required />
                            <div class="valid-feedback">Looks good!</div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label" for="password">Password</label>
                            <input class="form-control" type="password" id="password" name="password" required />
                            <div class="valid-feedback">Looks good!</div>
                        </div>
                        <button class="btn btn-dark w-100 mx-auto d-block mb-3">login</button>
                    </form>
                </div>
            </div>
            <!-- </form> -->
            <!-- <div class="col"></div> -->
        </div>
    </div>
</div>
